def sequencia_fibonacci(n):
    # Retorna a sequência de Fibonacci até o n-ésimo termo
    sequencia = [0, 1]
    while sequencia[-1] < n:
        sequencia.append(sequencia[-1] + sequencia[-2])
    return sequencia

def pertence_a_fibonacci(numero):
    # Verifica se o número está presente na sequência de Fibonacci
    sequencia = sequencia_fibonacci(numero)
    if sequencia[-1] == numero:
        return True
    else:
        return False

