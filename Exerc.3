import json

# Lê o arquivo JSON que contém os valores de faturamento diário
with open('dados.json') as arquivo:
    dados = json.load(arquivo)

# Armazena os valores de faturamento diário em um vetor
faturamento_diario = dados['faturamento']

# Calcula o menor e o maior valor de faturamento
menor_valor = min(faturamento_diario)
maior_valor = max(faturamento_diario)

# Calcula a média mensal de faturamento, ignorando os dias sem faturamento
dias_com_faturamento = [valor for valor in faturamento_diario if valor != 0]
media_mensal = sum(dias_com_faturamento) / len(dias_com_faturamento)

# Conta o número de dias em que o valor de faturamento diário foi superior à média mensal
dias_acima_da_media = sum(1 for valor in dias_com_faturamento if valor > media_mensal)

# Exibe os resultados
print(f"Menor valor de faturamento: R$ {menor_valor:.2f}")
print(f"Maior valor de faturamento: R$ {maior_valor:.2f}")
print(f"Número de dias com faturamento acima da média: {dias_acima_da_media}")
