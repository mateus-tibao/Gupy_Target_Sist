# Armazenar os valores de faturamento de cada estado em um dicionário
faturamento = {
    'SP': 67836.43,
    'RJ': 36678.66,
    'MG': 29229.88,
    'ES': 27165.48,
    'Outros': 19849.53
}

# Calcular o valor total mensal da distribuidora
total_mensal = sum(faturamento.values())

# Calcular o percentual de representação de cada estado
percentual = {estado: (valor / total_mensal) * 100 for estado, valor in faturamento.items()}

# Exibir os resultados
for estado, valor in percentual.items():
    print(f'{estado}: {valor:.2f}%')
